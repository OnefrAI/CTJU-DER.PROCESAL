    // Variables de estado
    let questions = [];
    let currentQuestionIndex = 0;
    let score = 0;
    
    // Elementos del DOM
    const themeSelect = document.getElementById('theme-select');
    const startQuizBtn = document.getElementById('start-quiz-btn');
    const startError = document.getElementById('start-error');
    const quizSection = document.getElementById('quiz-section');
    const quizContent = document.getElementById('quiz-content');
    const questionNumber = document.getElementById('question-number');
    const quizQuestionText = document.getElementById('quiz-question-text');
    const quizOptions = document.getElementById('quiz-options');
    const feedback = document.getElementById('feedback');
    const nextQuestionBtn = document.getElementById('next-question-btn');
    const restartQuizBtn = document.getElementById('restart-quiz-btn');
    const quizResults = document.getElementById('quiz-results');
    const restartQuizBtnEnd = document.getElementById('restart-quiz-btn-end');
    
    // Función para cargar el tema seleccionado
    function loadSelectedTopic() {
      const selectedTheme = themeSelect.value;
      if (questionBank[selectedTheme] && questionBank[selectedTheme].length > 0) {
        questions = JSON.parse(JSON.stringify(questionBank[selectedTheme]));
        startError.classList.add('hidden');
      } else {
        startError.classList.remove('hidden');
      }
    }
    
    // Iniciar el quiz
    function startQuiz() {
      loadSelectedTopic();
      if (questions.length === 0) return;
      // Barajar aleatoriamente las preguntas
      questions.sort(() => Math.random() - 0.5);
      currentQuestionIndex = 0;
      score = 0;
      document.getElementById('topic-selection').classList.add('hidden');
      startQuizBtn.classList.add('hidden');
      quizResults.classList.add('hidden');
      quizContent.classList.remove('hidden');
      nextQuestionBtn.classList.add('hidden');
      restartQuizBtn.classList.add('hidden');
      quizSection.classList.remove('hidden');
      displayQuestion();
    }
    
    // Mostrar la pregunta actual
    function displayQuestion() {
      if (currentQuestionIndex >= questions.length) {
        endQuiz();
        return;
      }
      const currentQuestion = questions[currentQuestionIndex];
      questionNumber.textContent = `Pregunta ${currentQuestionIndex + 1} de ${questions.length}`;
      quizQuestionText.textContent = currentQuestion.question;
      quizOptions.innerHTML = '';
      feedback.classList.add('hidden');
      nextQuestionBtn.classList.add('hidden');
      restartQuizBtn.classList.add('hidden');
    
      currentQuestion.options.forEach((option, index) => {
        const button = document.createElement('button');
        button.textContent = option;
        button.className = 'option-button block w-full text-left p-3 border border-gray-300 rounded-md hover:bg-gray-100';
        button.dataset.index = index;
        button.onclick = () => selectAnswer(index, button);
        quizOptions.appendChild(button);
      });
    }
    
    // Procesar la respuesta seleccionada
    function selectAnswer(selectedIndex, selectedButton) {
      const optionButtons = quizOptions.querySelectorAll('.option-button');
      optionButtons.forEach(btn => btn.disabled = true);
      const correctIndex = questions[currentQuestionIndex].correct;
      feedback.classList.remove('hidden');
      if (selectedIndex === correctIndex) {
        score++;
        feedback.textContent = '¡Correcto!';
        feedback.className = 'mt-4 p-3 rounded-md text-center font-medium bg-green-100 text-green-700';
        selectedButton.classList.add('correct');
      } else {
        feedback.textContent = `Incorrecto. La respuesta correcta era: "${questions[currentQuestionIndex].options[correctIndex]}"`;
        feedback.className = 'mt-4 p-3 rounded-md text-center font-medium bg-red-100 text-red-700';
        selectedButton.classList.add('incorrect');
        optionButtons.forEach(btn => {
          if (parseInt(btn.dataset.index) === correctIndex) {
            btn.classList.add('correct');
          }
        });
      }
      nextQuestionBtn.classList.remove('hidden');
      restartQuizBtn.classList.remove('hidden');
      nextQuestionBtn.textContent = (currentQuestionIndex === questions.length - 1) ? 'Ver Resultados Finales' : 'Siguiente Pregunta';
    }
    
    // Pasar a la siguiente pregunta
    function nextQuestion() {
      currentQuestionIndex++;
      displayQuestion();
    }
    
    // Terminar el quiz y mostrar resultados
    function endQuiz() {
      quizContent.classList.add('hidden');
      quizResults.classList.remove('hidden');
      quizResults.querySelector('h3').textContent = "¡Cuestionario Completado!";
      quizResults.querySelector('p').innerHTML = `Tu puntuación: <strong>${score}</strong> / <strong>${questions.length}</strong>`;
    }
    
    // Reiniciar el quiz (volver a la selección de tema)
    function restartQuiz() {
      quizResults.classList.add('hidden');
      quizContent.classList.remove('hidden');
      document.getElementById('topic-selection').classList.remove('hidden');
      startQuizBtn.classList.remove('hidden');
      quizSection.classList.add('hidden');
    }
    
    // Asignar listeners
    startQuizBtn.addEventListener('click', startQuiz);
    nextQuestionBtn.addEventListener('click', nextQuestion);
    restartQuizBtn.addEventListener('click', restartQuiz);
    restartQuizBtnEnd.addEventListener('click', restartQuiz);
  </script>
</body>
</html>
